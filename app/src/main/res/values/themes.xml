<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Parqueadero" parent="Theme.Material3.DayNight.NoActionBar">
        <!--Color -->
        <item name="colorPrimary">@color/color_LightBlue700</item>
        <item name="colorPrimaryVariant">@color/color_blue700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--ColorSecundario-->
        <item name="colorSecondary">@color/color_blue900</item>
        <item name="colorSecondaryVariant">@color/color_blueA700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Parqueadero" parent="Base.Theme.Parqueadero" />
    
    <style name="MenuButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>

    <style name="NextButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>
</resources>